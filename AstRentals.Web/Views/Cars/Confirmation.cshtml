@model AstRentals.Web.ViewModels.CheckoutViewModel
@{
    ViewBag.Title = "Confirmation";
}

<div class="page page-shop header-compact-sticky page-shop-confirmation navbar-layout-navbar-below">

    <!-- plugin: page loading indicator, delete to remove loader -->
    <div class="page-loader" data-toggle="page-loader"></div>

    <a href="#content" id="top" class="sr-only">Skip to content</a>
    
    @Html.Partial("PartialViews/_Header")

    <div id="content" class="py-5">
        <div class="container">
            <div class="text-center mb-6">
                <i class="fa fa-check-circle icon-6x text-success"></i>
                <h3>
                    Your Rental order has been successfully placed!
                </h3>
                <h4 class="font-weight-normal">
                    Your order number is: 346899-2834-ZZA
                </h4>
                <p>A confirmation email has been sent to your email address: @Model.EmailAddress.</p>
            </div>
            <h4>
                Rental Summary
            </h4>
            <table class="table table-responsive mb-0 cart-table cart-table-summary">
                <tbody>
                    <!-- Rental information -->
                    <tr>
                        <td class="text-center">
                            <a href="#">
                                <img class="cart-img img-fluid" src="@Url.Content(ViewBag.Car.ImageUrl)" alt="@ViewBag.Car.Make @ViewBag.Car.Model (@ViewBag.Car.Year)">
                            </a>
                        </td>
                        <td> <span class="font-weight-bold">@ViewBag.Car.Make @ViewBag.Car.Model (@ViewBag.Car.Year)</span> </td>
                        <td>@Model.Colour</td>
                        <td>@Model.Features</td>
                        <td>@Model.Cover</td>
                        <td>From: @Model.StartDate.ToString("dd/MM/yyyy") To: @Model.EndDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-md-right"><span class="font-weight-bold">Total: £@Model.TotalPrice</span></td>
                    </tr>
                </tbody>
            </table>
            <hr class="my-4 hr-lg" />
            <div class="cart-content-footer">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="text-muted mb-3">
                            If you have questions about your order please email us at support@astrentals.uk.com.
                        </h6>
                    </div>
                    <div class="col-md-8 text-md-right mt-3 mt-md-0">
                        <div class="cart-content-totals">
                            <h4 class="font-weight-light">
                                Rental Cost <small>(£28.00 * <strong>@Model.NumberOfDays</strong> Days)</small>: £@Model.RentalCost
                            </h4>
                            <h4 class="font-weight-light">
                                Cover Cost: <span class="text-danger">£@Model.CoverCost</span>
                            </h4>
                            @*<h4 class="font-weight-light">
                                Discount (10%): <span class="text-danger">-£19.99</span>
                            </h4>*@
                            <hr class="my-3 w-50 ml-0 ml-md-auto mr-md-0" />
                            <h3>
                                Total: <span class="text-primary">£@Model.TotalPrice</span>
                            </h3>
                            <hr class="my-3 w-50 ml-0 ml-md-auto mr-md-0" />
                        </div>
                        <!-- Proceed to checkout -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_Footer")

@section scripts{
    <!-- Angular scripts -->
    <script src="~/App/favouriteDetailsController.js"></script>
}