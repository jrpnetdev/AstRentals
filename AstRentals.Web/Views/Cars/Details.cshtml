@model int?
@{
    ViewBag.Title = "Details";
}
@section styles {
    <link href="~/assets/css/daterangepicker.css" rel="stylesheet" />
}


<div class="ng-cloak">
    <!-- ======== Region: body ======== -->
    <div class="page page-shop header-compact-sticky page-shop-product navbar-layout-navbar-below" ng-controller="carDetailsController as vm" ng-init="vm.getCar(@Model)">

        <!-- plugin: page loading indicator, delete to remove loader -->
        <div class="page-loader" data-toggle="page-loader"></div>

        <a href="#content" id="top" class="sr-only">Skip to content</a>

        @Html.Partial("PartialViews/_Header")

        <!-- ======== Region: #page-header ======== -->
        <div id="page-header">
            <div class="container clearfix">
                <h3 class="mb-0 float-md-left">
                    Car Details
                </h3>
                <!-- Page header breadcrumb -->
                <nav class="breadcrumb float-md-right"> <a class="breadcrumb-item" href="index.htm">Home</a> <a class="breadcrumb-item" href="shop.htm">Shop Home</a> <span class="breadcrumb-item active">Product View</span> </nav>
            </div>
        </div>

        <!-- ======== Region: #content ======== -->
        <div id="content" class="pt-3 pt-lg-6 pb-lg-0">
            <div class="container">
                <!-- Product view -->
                <div class="row">
                    <div class="col-lg-5">
                        <!-- Shop product carousel Uses Owl Carousel plugin All options here are customisable from the data-owl-carousel-settings="{OBJECT}" item via data- attributes: http://www.owlgraphic.com/owlcarousel/#customizing ie. data-settings="{"items": "4", "lazyLoad":"true", "navigation":"true"}" -->
                        <div class="product-gallery pos-relative">
                            @*<div class="bg-info text-white rounded pos-absolute pos-zindex-2 mt-2 ml-2 py-2 px-3">On Sale</div>*@
                            <div class="owl-carousel owl-nav-over" id="product-gallery" data-toggle="owl-carousel" data-owl-carousel-settings='{"responsive":{"0":{"items":1,"nav":true, "dots":false}}}'>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[0].image_url}}">
                                    <img src="{{vm.carImages.data.images[0].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[1].image_url}}">
                                    <img src="{{vm.carImages.data.images[1].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[2].image_url}}">
                                    <img src="{{vm.carImages.data.images[2].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[3].image_url}}">
                                    <img src="{{vm.carImages.data.images[3].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[4].image_url}}">
                                    <img src="{{vm.carImages.data.images[4].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                                <a href="#" data-img-zoom="{{vm.carImages.data.images[5].image_url}}">
                                    <img src="{{vm.carImages.data.images[5].image_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})" class="lazyOwl img-fluid" width="200" />
                                </a>
                            </div>
                            <div class="owl-thumbs" data-toggle="owl-carousel" data-owl-carousel-thumbs="#product-gallery" data-owl-carousel-settings='{"nav":false, "dots":false, "margin":5}'>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[0].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[1].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[2].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[3].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[4].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                                <a class="owl-thumb">
                                    <img class="img-fluid" src="{{vm.carImages.data.images[5].thumb_url}}" alt="{{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="card product-card mb-4">
                            <!-- Ribbon -->
                            <div class="card-ribbon card-ribbon-bottom card-ribbon-right bg-primary text-white">Top Rated</div>
                            <!-- Content -->
                            <div class="card-block p-4 pos-relative">
                                <!-- Product details -->
                                <p class="text-muted text-uppercase text-xs mb-0"><span class="text-primary">Mens</span> / Jackets</p>
                                <h2 class="card-title mb-2">
                                    {{vm.car.make}} {{vm.car.model}} ({{vm.car.year}}) @Model
                                </h2>
                                <h4 class="font-weight-bold text-primary">
                                    <del class="op-5">£179.99</del>
                                    / £199.99
                                </h4>
                                <div class="product-offer-countdown">
                                    <p class="mb-t mb-0 text-xs">Offers end in:</p>
                                    <div class="countdown" data-countdown="2017/2/30" data-countdown-format='<span class="count">
                                    <span class="digit">%-d</span> days</span>
                                    <span class="count"><span class="digit">%-H</span> hrs</span>
                                    <span class="count"><span class="digit">%-M</span> mins</span>
                                    <span class="count"><span class="digit">%-S</span> secs</span>
                                    '>
                                </div>
                                </div>
                                <div class="pos-md-absolute pos-t pos-r mr-4 mt-3 text-md-right">
                                    <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i>
                                    <p class="my-0 text-xs">10 reviews | <a href="#reviews">write review</a></p>
                                </div>
                                <hr class="my-3" />
                                <p class="text-muted text-sm">Brevitas in molior ullamcorper. Abdo capto obruo occuro proprius rusticus sit utinam. Consequat esca exputo gravis haero quis saepius si vicis.</p>
                                <p class="text-muted text-sm">Hos ibidem patria. Fere neque nostrud. Amet huic jus nobis nostrud qui vel verto. Acsi commoveo cui imputo pertineo refero vero vulpes vulputate.</p>
                                <hr class="my-3 mb-5" />
                                <!-- Cart options/links -->
                                <div class="product-options row mb-4">
                                    <div class="col-md-12 text-sm text-uppercase">Colour</div>
                                    <div class="col-md-4 mb-3">
                                        <select class="form-control form-control-sm">
                                            <option value="red">Red</option>
                                            <option value="silver">Silver</option>
                                            <option value="blue">Blue</option>
                                            <option value="black">Black</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 text-sm text-uppercase">Features</div>
                                    <div class="col-md-4 mb-3">
                                        <select class="form-control form-control-sm">
                                            <option value="3door">3 Door</option>
                                            <option value="5door">5 Door</option>
                                            <option value="convertible">Convertible</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 text-sm text-uppercase">Insurance and Cover</div>
                                    <div class="col-md-4 mb-3">
                                        <select class="form-control form-control-sm">
                                            <option value="cancellation">Basic Cover (£0.00)</option>
                                            <option value="cancellation">Basic Cover + Cancellation Guarantee (£20.00)</option>
                                            <option value="extended">Extended Insurance (£100.00)</option>
                                            <option value="premium">Premium Cover (£250.00)</option>
                                        </select>
                                    </div>

                                    <div class="col-md-12 text-sm text-uppercase"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i> Hire Dates</div>
                                    <div class="col-md-4 mb-3" ng-controller="DatepickerCtrl">
                                        <div>
                                            <div style="display:inline-block; min-height:255px;">
                                                <uib-datepicker template-url="../../App/DatePicker/datepicker.html" ng-model="dt" min-date="minDate" init-date="initDate" class="well well-sm" custom-class="getDayClass(date, mode)"></uib-datepicker>
                                            </div>

                                            <div class="col-md-12">Start: {{start | date:'fullDate'}}</div>
                                            <div class="col-md-12">End: {{end | date:'fullDate'}}</div>
                                        </div>
                                    </div>
                                </div>
                                <div ng-controller="wishlistController">
                                    <a href="@Url.Action("Checkout")" class="btn btn-primary"><i class="fa fa-car mr-2"></i> Book Rental</a>
                                    <a href="#" class="btn btn-link btn-sm" ng-click="addToWishlist(@Model)"><i class="fa fa-heart"></i> Add to Wishlist</a>
                                    <p class="text-muted text-xs d-inline hidden-md-down">12769 in stock</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <!-- Product tabs, see: elements-navs-tabbable.htm -->
                        <div class="card mt-5 border-top-0">
                            <div class="card-header bg-white pt-0 px-0">
                                <ul class="nav nav-tabs nav-justified card-header-tabs flex-column flex-md-row">
                                    <li class="nav-item"> <a class="nav-link active py-md-4 text-uppercase font-weight-bold" href="#product-description" data-toggle="tab">Details</a> </li>
                                    <li class="nav-item"> <a class="nav-link py-md-4 text-uppercase font-weight-bold" href="#product-spec" data-toggle="tab">Specification</a> </li>
                                    <li class="nav-item"> <a class="nav-link py-md-4 text-uppercase font-weight-bold" href="#product-reviews" data-toggle="tab">Reviews (10)</a> </li>
                                </ul>
                            </div>
                            <div class="card-block p-4">
                                <div class="tab-content">
                                    <!-- Tab 1: Description tab content -->
                                    <div class="tab-pane active show" id="product-description">
                                        <h4 class="card-title">
                                            Product Description
                                        </h4>
                                        <p class="card-text">{{vm.carInfo}}</p>

                                    </div>
                                    <!-- Tab 2: Specification tab content -->
                                    <div class="tab-pane" id="product-spec">
                                        <h4 class="card-title">
                                            Car Specification: {{vm.car.make}} {{vm.car.model}} ({{vm.car.year}})
                                        </h4>
                                        <p class="card-text">
                                            Specifications, Features, Packages, Options & Accessories: Specifications, features and equipment, Packages, Options and Accessories shown for our models are based upon the latest information available.
