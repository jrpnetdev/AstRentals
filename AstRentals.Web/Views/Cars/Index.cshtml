
@{
    ViewBag.Title = "Car List";
}

<div class="ng-cloak" ng-controller="carListController as vm" ng-init="vm.getPageMake('Ferrari', 1, vm.pageSizeSelection)">
    <!-- ======== Region: body ======== -->
    <div class="page page-shop header-compact-sticky page-shop-list navbar-layout-navbar-below">

        <!-- plugin: page loading indicator, delete to remove loader -->
        <div class="page-loader" data-toggle="page-loader"></div>

        <a href="#content" id="top" class="sr-only">Skip to content</a>

        @Html.Partial("PartialViews/_Header")

        <!-- ======== Region: #page-header ======== -->
        <div id="page-header">
            <div class="container clearfix">
                <h3 class="mb-0 float-md-left">
                    Car Rentals List
                </h3>
                <!-- Page header breadcrumb -->
                <nav class="breadcrumb float-md-right"> <a class="breadcrumb-item" href="@Url.Action("Index", "Home")">Home</a> <a class="breadcrumb-item" href="@Url.Action("Index", "Home")">Shop Home</a> <span class="breadcrumb-item active">Products List</span> </nav>
            </div>
        </div>

        <!-- ======== Region: #content ======== -->
        <div id="content" class="py-3 py-lg-6">
            <div class="container">
                <div class="row">
                    <!-- Products grid -->
                    <div class="col-lg-9 push-lg-3">
                        <!-- Products filters -->
                        <div class="row">
                            <div class="col-lg-6 mb-3 mb-lg-0">
                                <form class="form-inline justify-content-lg-start text-sm">
                                    <label class="control-label mr-2">
                                        Keyword:&nbsp;
                                        <input type="text" class="form-control form-control-sm mr-lg-2" ng-model="vm.searchText" placeholder="ie. Ford Mustang" ng-keypress="($event.which === 13)?vm.search(vm.searchText, 1, vm.pageSizeSelection):0">
                                    </label>
                                    <a href="#adv-search" data-toggle="collapse" class="text-sm">advanced search</a>
                                </form>
                            </div>
                            <div class="col-lg-6">
                                <form class="form-inline justify-content-lg-end text-sm">
                                    <label class="control-label mr-2">
                                        Sort By:&nbsp;
                                        <select class="form-control form-control-sm">
                                            <option value="#">Name (A - Z)</option>
                                            <option value="#">Name (Z - A)</option>
                                            <option value="#">Price (Low &gt; High)</option>
                                            <option value="#" selected="">Price (High &gt; Low)</option>
                                            <option value="#">Rating (Highest)</option>
                                            <option value="#">Rating (Lowest)</option>
                                        </select>
                                    </label>
                                    <label class="control-label mr-2 ml-lg-3">
                                        Show:&nbsp;
                                        <select class="form-control form-control-sm" ng-model="vm.pageSizeSelection" ng-selected="vm.pageSizeSelection">
                                            <option value="10">10</option>
                                            <option value="15">15</option>
                                            <option value="20">20</option>
                                        </select>
                                    </label>
                                </form>
                            </div>
                            <div class="col-lg-12 collapse" id="adv-search" ng-init="vm.ddlInit()">
                                <!-- Advanced search form -->
                                <form class="mt-3 bg-faded p-3 rounded mb-4 text-sm" name="advancedSearch">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label>Make</label>
                                            <select class="form-control" name="make" ng-model="vm.selectedMake">
                                                <option ng-selected="{{vm.selectedMake}}"
                                                        ng-repeat="make in vm.makeDropDownValues"
                                                        value="{{make}}">
                                                    {{make}}
                                                </option>
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label>Model</label>
                                            <select class="form-control" name="model" ng-model="vm.selectedModel">
                                                <option ng-selected="{{vm.selectedModel}}"
                                                        ng-repeat="model in vm.modelDropDownValues"
                                                        value="{{model}}">
                                                    {{model}}
                                                </option>
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label>Price</label>
                                            <div class="row">
                                                <div class="input-group col-md-6">
                                                    <span class="input-group-addon">$</span>
                                                    <input type="text" class="form-control" placeholder="from" disabled="disabled">
                                                </div>
                                                <div class="input-group col-md-6">
                                                    <span class="input-group-addon">$</span>
                                                    <input type="text" class="form-control" placeholder="to" disabled="disabled">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label>Year</label>
                                            <select class="form-control" name="year" ng-model="vm.selectedYear">
                                                <option ng-selected="{{vm.selectedYear}}"
                                                        ng-repeat="year in vm.yearDropDownValues"
                                                        value="{{year}}">
                                                    {{year}}
                                                </option>
                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary" ng-click="vm.getPageMake(vm.selectedMake, 1, vm.pageSizeSelection)"> <i class="fa fa-search"></i> Search Make</button>
                                            <button type="submit" class="btn btn-primary" ng-click="vm.getPageYear(vm.selectedYear, 1, vm.pageSizeSelection)"> <i class="fa fa-search"></i> Search Year</button>
                                            <button type="submit" class="btn btn-primary" ng-click="vm.search(vm.selectedModel, 1, vm.pageSizeSelection)"> <i class="fa fa-search"></i> Search Model</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <hr class="my-4" />

                        <div class="row">
                            <div ng-show="vm.error">{{vm.error}}</div>
                            <div ng-repeat="item in vm.cars" ng-if="vm.cars" scroll-directive>
                                <div ng-class="$index > 5 ? 'hideme' : ''">
                                    <div class="col-lg-12">
                                        <!-- Product -->
                                        <div class="card product-card mb-4">
                                            <!-- Ribbon -->
                                            <div ng-show="$index === 3" class="card-ribbon card-ribbon-bottom card-ribbon-right bg-primary text-white">Top Rated</div>
                                            <div ng-show="$index === 7" class="card-ribbon card-ribbon-bottom card-ribbon-right bg-danger text-white">Special</div>
                                            <!-- Content -->
                                            <div class="card-block p-3 pos-relative row">
                                                <!-- Image content -->
                                                <div class="col-md-4 mb-2 mb-md-0">
                                                    <img class="rounded img-fluid" ng-src="{{item.imageUrl}}" alt="Car image" width="600" height="400">
                                                </div>
                                                <!-- Product details -->
                                                <div class="col-md-8 d-flex flex-column align-items-start">
                                                    <p class="text-muted text-uppercase text-xs mb-0">
                                                        <span class="text-primary">{{item.make}}</span> / {{item.model}} {{item.id}}
                                                    </p>
                                                    <h4 class="card-title mb-2">
                                                        <a href="@Url.Action("Details", "Cars")?Id={{item.id}}&Email=@ViewBag.Email" class="text-grey-dark">{{item.make}} {{item.model}} ({{item.year}})</a>
                                                    </h4>
                                                    <p class="font-weight-bold">£199.99 per day</p>
                                                    <p class="pos-md-absolute pos-t pos-r mr-3 text-md-right">
                                                        <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star text-primary"></i> <i class="fa fa-star-half-o text-primary"></i>
                                                    </p>
                                                    <p class="text-muted text-xs">Consectetuer feugiat hendrerit jus neo usitas valde verto. Abbas duis interdico modo ymo.</p>
                                                    <div class="mt-auto" ng-controller="favouriteController">
                                                        <a href="@Url.Action("Details", "Cars")?Id={{item.id}}&Email=@ViewBag.Email" class="btn btn-primary btn-sm"><i class="fa fa-car mr-2"></i> Book Car Now</a>
                                                        <a href="#" class="btn btn-link btn-sm" data-id="{{item.id}}" data-email="@ViewBag.Email" ng-click="addToFavourites($event)"><i class="fa fa-heart" style="color: red"></i> Add to Favourites</a>
                                                        <a href="#" class="btn btn-link btn-sm" data-id="{{item.id}}" data-email="@ViewBag.Email" ng-click="removeFromFavourites($event)"><i class="fa fa-heart-o"></i> Remove From Favourites</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Call to action -->
                        <div class="my-3" data-url="#">
                            <hr class="hr-lg mt-0 mb-1 w-100 mx-auto hr-danger" />
                            <div class="pos-relative">
                                <i class="fa fa-bullseye icon-bg icon-op-1 icon-bg-l-ol icon-25x text-white"></i> <i class="fa fa-bullseye icon-bg icon-op-1 icon-bg-r-ol icon-bg-b icon-25x text-white"></i>
                                <div class="p-4 text-center bg-danger">
                                    <h2 class="display-4 font-weight-normal text-uppercase text-white my-0 text-slab">
                                        Special Offers
                                    </h2>
                                    <h4 class="text-white mb-0 text-slab">
                                        Price reductions on 100s of classic rentals!
                                    </h4>
                                </div>
                            </div>
                            <hr class="hr-lg mt-1 w-100 mx-auto hr-danger" />
                        </div>
                        <!-- Pagination -->
                        <div ng-show="vm.searchType === 'make'">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg justify-content-center">
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Previous" ng-click="vm.getPageMake(vm.cars[0].make, vm.currentPage-1, vm.pageSizeSelection)"> <span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span> </a>
                                    </li>

                                    <li ng-class="vm.currentPage === i ? 'page-item active' : 'page-item'" ng-repeat="i in vm.getNumber() track by $index"><a class="page-link" href="#" ng-click="vm.getPageMake(vm.cars[0].make, i, vm.pageSizeSelection)">{{i}}</a></li>

                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next" ng-click="vm.getPageMake(vm.cars[0].make, vm.currentPage+1, vm.pageSizeSelection)"> <span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span> </a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center"><span class="text-primary">Showing page {{vm.currentPage}} of {{vm.numberOfPages}}</span></div>
                        </div>
                        <div ng-show="vm.searchType === 'year'">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg justify-content-center">
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Previous" ng-click="vm.getPageYear(vm.cars[0].year, vm.currentPage-1, vm.pageSizeSelection)"> <span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span> </a>
                                    </li>

                                    <li ng-class="vm.currentPage === i ? 'page-item active' : 'page-item'" ng-repeat="i in vm.getNumber() track by $index"><a class="page-link" href="#" ng-click="vm.getPageYear(vm.cars[0].year, i, vm.pageSizeSelection)">{{i}}</a></li>

                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next" ng-click="vm.getPageYear(vm.cars[0].year, vm.currentPage+1, vm.pageSizeSelection)"> <span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span> </a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center"><span class="text-primary">Showing page {{vm.currentPage}} of {{vm.numberOfPages}}</span></div>
                        </div>
                        <div ng-show="vm.searchType === 'search'">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg justify-content-center">
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Previous" ng-click="vm.search(vm.searchText, vm.currentPage-1, vm.pageSizeSelection)"> <span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span> </a>
                                    </li>

                                    <li ng-class="vm.currentPage === i ? 'page-item active' : 'page-item'" ng-repeat="i in vm.getNumber() track by $index"><a class="page-link" href="#" ng-click="vm.search(vm.searchText, i, vm.pageSizeSelection)">{{i}}</a></li>

                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next" ng-click="vm.search(vm.searchText, vm.currentPage+1, vm.pageSizeSelection)"> <span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span> </a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center"><span class="text-primary">Showing page {{vm.currentPage}} of {{vm.numberOfPages}}</span></div>
                        </div>

                    </div>
                    <!-- Products sidebar -->
                    <div class="col-lg-3 pull-lg-9">

                        <categories></categories>

                        <div class="p-3 overlay overlay-op-5 rounded flex-valign mb-4" data-bg-img="../../assets/img/shop/promo-truck.jpg" data-css='{"background-position":"center bottom"}' data-url="@Url.Action("Details")">
                            <h4 class="text-white mb-0">
                                Free Shipping
                            </h4>
                            <p class="text-white mb-0">On all orders over $100</p>
                            <hr class="hr-lg my-2 w-20 mx-auto hr-primary" />
                        </div>

                        <!-- Follow Widget -->
                        <div class="mb-4">
                            <hr class="hr-lg mt-0 mb-2 w-10 ml-0 hr-primary" />
                            <h4 class="text-uppercase font-weight-bold mt-0">
                                Follow us on
                            </h4>
                            <!--todo: replace with company social media details-->
                            <a href="#" class="btn btn-icon btn-inverse btn-rounded"> <i class="fa fa-twitter"></i> <span class="sr-only">Twitter</span> </a>
                            <a href="#" class="btn btn-icon btn-inverse btn-rounded"> <i class="fa fa-facebook"></i> <span class="sr-only">Facebook</span> </a>
                            <a href="#" class="btn btn-icon btn-inverse btn-rounded"> <i class="fa fa-linkedin"></i> <span class="sr-only">Linkedin</span> </a>
                            <a href="#" class="btn btn-icon btn-inverse btn-rounded"> <i class="fa fa-google-plus"></i> <span class="sr-only">Google plus</span> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
</div>

@section scripts{
    <!-- Angular scripts -->
    <script src="~/App/carListController.js"></script>
    <script src="~/App/favouriteController.js"></script>
    <script src="~/App/favouriteDetailsController.js"></script>
    <script src="~/App/services/carService.js"></script>
    <script src="~/App/services/carSearchService.js"></script>
    <script src="~/App/services/carDropDownService.js"></script>
    <script src="~/App/directives/categoriesDirective.js"></script>
    <script src="~/App/directives/scrollDirective.js"></script>
}